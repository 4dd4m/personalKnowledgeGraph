#!/bin/bash
title(){
    notes=$(find . -maxdepth 1 -name "[0-9]*.md" -type f)
    if [[ -n "$notes" ]];then
        touch tmpf
        for note in $notes;do
            title=$(head -1 "$note")
            echo "* [${title/\# /}](${note/\.\//})" >> tmpf
            done
                        echo "# Index of notes" > index.md
                        cat tmpf | sort >> index.md
                        echo -e "\n[Readme](README.md)" >>index.md
                        rm tmpf
        cat index.md
    fi
}


parseTags(){
    #parse all available tags and put in in a tagfile
    files=$(find . -type f -name "20*")
    if [[ -n "$files" ]];then
        echo -e "# Index of Tags\n" > indexOfTags.md
        for note in $files;do
            tagLine=$(grep -e '^        #'  "$note")
            line=${tagLine//        /}
            lines+=("${line//\#/}")
            done

            printf "[%s]()\n" ${lines[@]} ${lines[@]} | sort -u > indexOfTags.md
            printf "%s\n" ${lines[@]} | sort -u 
            echo -e "\n[[README.md|back]]" >> indexOfTags.md
    fi
}


getAllTags(){
    #parse all tags and read the file from tmp/allTags
    parseTags
}

grepTags(){
    result=$(grep "$1" tmp/allTags)
    [ -n "$result" ] && echo "$result" || echo "No tags"
}


case $1 in
    tags)
        getAllTags
        exit 0;;
    searchTag)
        grepTags "$2"
        exit 0;;
    new)
        vim "$(date +%Y%m%d%H%M%S)".md
        ;;
    last)vim "$(ls -1r 20* | head -1)"
        ;;
    title)title
        ;; 
    *)
        echo -e "Usage:
        new\t\t\tnew note
        last\t\tedit last note
        title\t\tlist all notes title
        searchTag\t\tsearch tags
        tags\t\tbuild tagfile";;
esac

# vim: set filetype=sh :
